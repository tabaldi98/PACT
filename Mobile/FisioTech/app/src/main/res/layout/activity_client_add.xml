            android:text="@string/txt_end_service_time" />

        <EditText
            android:id="@+id/txt_end_service_time_wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <!-- Quinta feira -->
        <CheckBox
            android:id="@+id/check_thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_thursday" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_start_service_time" />

        <EditText
            android:id="@+id/txt_start_service_time_thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_end_service_time" />

        <EditText
            android:id="@+id/txt_end_service_time_thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <!-- Sexta feira -->
        <CheckBox
            android:id="@+id/check_friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_friday" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_start_service_time" />

        <EditText
            android:id="@+id/txt_start_service_time_friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_end_service_time" />

        <EditText
            android:id="@+id/txt_end_service_time_friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <!-- Sábado -->
        <CheckBox
            android:id="@+id/check_saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_saturday" />

        <TextView
            android:id="@+id/textView38"
